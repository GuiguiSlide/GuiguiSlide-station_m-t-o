// 📊 Fonction pour envoyer les données JSON
void handleData() {
  temperature = dht.readTemperature();
  humidity = dht.readHumidity();

  if (isnan(temperature) || isnan(humidity)) {
    server.send(500, "application/json", "{\"error\":\"Erreur de lecture du capteur\"}");
  } else {
    String json = "{\"temp\":" + String(temperature) + ", \"hum\":" + String(humidity) + "}";
    server.send(200, "application/json", json);
  }
}

// 📌 Gestion de la page principale
void handleRoot() {
  server.send(200, "text/html", generateHTML());
}

// 🔍 Page non trouvée
void handleNotFound() {
  server.send(404, "text/plain", "Page non trouvée");
}

// 🚀 Setup de l'ESP32
void setup() {
  Serial.begin(115200);
  dht.begin();
  delay(2000); // Attente de stabilisation du capteur

  // 📡 Démarrage du Wi-Fi
  WiFi.softAP(ssid, password);
  Serial.println("WiFi AP démarré !");
  Serial.print("Adresse IP : ");
  Serial.println(WiFi.softAPIP());

  // 🌍 Configuration du serveur web
  server.on("/", handleRoot);
  server.on("/data", handleData);
  server.onNotFound(handleNotFound);
  server.begin();
  Serial.println("Serveur HTTP en ligne !");
}

// 🔄 Boucle principale
void loop() {
  server.handleClient();
}